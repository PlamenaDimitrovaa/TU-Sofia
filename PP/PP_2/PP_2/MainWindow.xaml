<Window x:Class="PP_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PP_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="StartButton" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Margin="0,54,0,0" Click="StartButton_Click"/>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Width="350" Height="200">
            <Label Name="OutputLabel" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Waiting..." FontSize="16"/>
        </ScrollViewer>
        <TextBlock Name="TimeLabel" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </Grid>
</Window>
